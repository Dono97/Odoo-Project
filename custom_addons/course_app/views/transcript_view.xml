<?xml version="1.0"?>
   <odoo>
     <record id="view_form_transcript" model="ir.ui.view">
       <field name="name">Transcript View</field>
       <field name="model">transcript.student</field>
       <field name="arch" type="xml">
         <form string="Transcript">
           <group>
             <field name='student_transcript_id'/>
           </group>
           <group>
             <field name="result_transcript_id" widget="One2many_tags"/>
             <field name="module_transcript_id" widget="One2many_tags"/>
           </group>
         </form>
       </field>
     </record>

     <record id="view_search_student" model="ir.ui.view">
         <field name="name">Search a Student</field>
         <field name="model">transcript.student</field>
         <field name="arch" type="xml">
         <search>
           <field name="result_transcript_id"/>
           <filter name="filter_inactive"
                   string="Inactive"
                   domain="[('active','=',True)]"/>
           <filter name="filter_active"
                   string="Active"
                   domain="[('active','=',False)]"/>
         </search>
         </field>
       </record>


</odoo>
